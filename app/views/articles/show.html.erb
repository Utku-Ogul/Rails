<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
<li>
  <%= form_with(model: @article, method: :delete, data: { confirm: "Are you sure?" }) do |form| %>
    <%= form.submit "Destroy" %>
  <% end %>
</li>

</ul>


<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>